{
    "name": "wbsartori/mvp-back-end",
    "type": "library",
    "description": "Package for abstracting javascript dashboards with php",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "phpcompatibility-version7-3" : "vendor/bin/phpcs -p --standard=PSR12 src/ --runtime-set testVersion 7.3 --extensions=php",
        "phpcompatibility-version7-4" : "./vendor/bin/phpcs -p --standard=PSR12 src/ --runtime-set testVersion 7.4 --extensions=php",
        "phpcompatibility-version8-0" : "./vendor/bin/phpcs -p --standard=PSR12 src/ --runtime-set testVersion 8.0 --extensions=php",
        "phpcs-security": "./vendor/bin/phpcs --extensions=php --standard=ruleset-security-audit.xml ",
        "lint": "phpcs --standard=PSR12 src/ examples/ tests/",
        "lint-fix": "phpcbf --standard=PSR12 src/ examples/ tests/"
    },
    "archive": {
        "exclude": [
            "tests",
            ".gitignore",
            "docs",
            ".github",
            "phpunit.xml"
        ]
    },
    "config": {
        "platform": {
            "php": "7.3"
        }
    },
    "authors": [
        {
            "name": "Wesley Bonfim Sartori",
            "email": "wesley.sartori@ixcsoft.com.br"
        }
    ],
    "require": {
        "php": ">=7.3",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "Dashboards\\": "src/",
            "Dashboards\\Examples\\": "../examples/",
            "Dashboards\\Tests\\": "../tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7",
        "phpcompatibility/php-compatibility": "^9.3"
    }
}
